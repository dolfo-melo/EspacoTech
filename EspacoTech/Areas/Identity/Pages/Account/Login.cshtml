@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<main class="minha-imagem d-flex flex-column justify-content-center align-content-center gap-3">
    <img src="~/src/vazio.png" alt="logo" width="500" height="100" />
<div class="container">
    <div class="container-sm w-50 h-50 align-content-center">
                <form id="account" class="bg-dark bg-gradient bg-opacity-75 p-3 gap-2" method="post">
                <h2 class="text-light fw-bold text-center">Use uma conta para realizar o Login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control text-light border-1 border-light bg-dark bg-gradient bg-opacity-75" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label text-light fw-bolder">E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control text-light border-1 border-light bg-dark bg-gradient bg-opacity-75" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label text-light fw-bolder">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label text-light border-1 border-light bg-dark bg-gradient bg-opacity-75">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Lembrar Senha
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success text-light">Login</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="fw-bolder text-light btn-outline-primary">Esqueceu sua senha?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bolder text-light btn-outline-primary">Registre-se</a>
                    </p>
                </div>
            </form>
    </div>
