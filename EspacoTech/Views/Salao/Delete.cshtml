@model EspacoTech.Models.Sala

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fw-bold text-success">Deletar Sala</h1>

<h3 class="btn btn-danger text-light fw-bold">Deseja remover a sala?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2 fw-bold text-warning">
            @Html.DisplayNameFor(model => model.TipoSala)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.TipoSala)
        </dd>
        <dt class="col-sm-2 fw-bold text-warning">
            @Html.DisplayNameFor(model => model.Capacidade)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Capacidade)
        </dd>
        <dt class="col-sm-2 fw-bold text-warning">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2 fw-bold text-warning">
            @Html.DisplayNameFor(model => model.Equipamento)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Equipamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdSala" />
        <input type="submit" value="Remover" class="btn btn-danger text-light fw-bold" />
        <a asp-action="Index" class="btn btn-warning text-dark fw-bold">Voltar</a>
    </form>
</div>
