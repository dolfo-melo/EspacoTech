@model EspacoTech.Models.Sala

@{
    ViewData["Title"] = "Editar Sala";
}

<h1 class="text-success fw-bold">Editar Sala</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form class="gap-3" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSala" />
            <div class="form-group">
                <label asp-for="TipoSala" class="control-label text-light fw-bolder"></label>
                <input asp-for="TipoSala" class="form-control bg-black bg-gradient border-1 border-light text-light" />
                <span asp-validation-for="TipoSala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidade" class="control-label text-light fw-bolder"></label>
                <input asp-for="Capacidade" class="form-control bg-black bg-gradient border-1 border-light text-light" />
                <span asp-validation-for="Capacidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label text-light fw-bolder"></label>
                <input asp-for="Descricao" class="form-control bg-black bg-gradient border-1 border-light text-light" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipamento" class="control-label text-light fw-bolder"></label>
                <input asp-for="Equipamento" class="form-control bg-black bg-gradient border-1 border-light text-light" />
                <span asp-validation-for="Equipamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success fw-bold" />
            </div>
        </form>
        <div>
            <a class="btn btn-outline-warning text-light fw-bold" asp-action="Index">Voltar</a>
        </div>
    </div>

    <div class=" col-lg minha-imagem order-lg-2 d-flex flex-column justify-content-center mb-5">
        <div class="container-fluid py-5 d-flex flex-column justify-content-center">
            <img src="~/src/vazio.png" alt="logo" width="500" height="100" />
        </div>
        <div class="container-fluid py-5 d-flex flex-column justify-content-center">
            <img class="align-self-center" src="~/src/logoMain.png" alt="logo" width="500" height="150" />
        </div>
        <div class="container-fluid py-5 d-flex flex-column justify-content-center">
            <img src="~/src/vazio.png" alt="logo" width="500" height="100" />
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
